@page "/vistavkis/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorApp.Data
@inject IDbContextFactory<BlazorApp.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Удалить</PageTitle>

<h1>Удалить выставку</h1>

<div>
    <hr />
    @if (vistavki is null)
    {
        <p><em>Загрузка...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Название</dt>
            <dd class="col-sm-10">@vistavki.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Описание</dt>
            <dd class="col-sm-10">@vistavki.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Дата начала</dt>
            <dd class="col-sm-10">@vistavki.DateStart</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Дата окончания</dt>
            <dd class="col-sm-10">@vistavki.DateEnd</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Адрес проведения</dt>
            <dd class="col-sm-10">@vistavki.Address</dd>
        </dl>
        <EditForm method="post" Model="vistavki" OnValidSubmit="DeleteVistavki" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(vistavki is null)">Удалить</button> |
            <a href="/vistavkis">Возврат к списку выставок</a>
        </EditForm>
    }
</div>

@code {
    private Vistavki? vistavki;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        vistavki = await context.vistavkis.FirstOrDefaultAsync(m => m.Id == Id);

        if (vistavki is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteVistavki()
    {
        using var context = DbFactory.CreateDbContext();
        context.vistavkis.Remove(vistavki!);
        foreach (var i in context.bilets.Where(i => i.Vistavka == vistavki!.Id))
        {
            context.bilets.Remove(i);
        }
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/vistavkis");
    }
}
